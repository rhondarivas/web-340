<!DOCTYPE html>
<html lang en="us">
<link rel="stylesheet" type="text/css" href="../style.css">
<body>
  <%- include('header') -%>
  <%- include('navbar') -%>
  <div role="main" id="container" style="width: 30%;">
      <% if (employees.length) { %>
      <h2>Current Employees</h2>
      <a href="/new"><button class="button-sm">Add New Employee</button></a>
      <br/>
      <table class="table">
          <thead>
              <tr>
                  <th>First Name</th>
                  <th>Last Name</th>
                  <th>ID</th>
              </tr>
          </thead>
          <tbody>
              <% employees.forEach(function(entry) { %>
              <tr>
                  <td><%= entry.firstName %></td>
                  <td><%= entry.lastName %></td>
                  <td><%= entry.id %></td>
              <td><a href="/view/<%= entry.id %>">View</a></td>
              </tr>
          </tbody>
          <% }) %>
      </table>
      <% } else { %> There are No entries! <a href="/new">Add one!</a>
      <% } %>
      <br/>
  </div>
  <%- include('footer') -%>
  <%- include('scripts') -%>
</body>
</html>
